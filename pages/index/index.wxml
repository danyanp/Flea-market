<!--index.wxml-->
<!-- 顶部tab标签 -->
<van-tabs type="card" color="#1296db">

  <!-- 1.已经发布 -->
  <van-tab title="已经发布">
    <!-- 滚动视图，加载商品信息 -->
    <scroll-view>

      <view class='card' wx:for="{{data}}" wx:key="data">
        <navigator hover-class="none" url="../detail/detail?goods_id={{item.objectId}}">
          <van-card 
            num="{{item.createdAt}}"
            tag="标签" 
            price="{{item.goodprice}}" 
            desc="{{item.description}}" 
            title="{{item.goodname}}" 
            thumb="{{item.goodpicture.url}}"
          >
            <view slot="footer">
              <van-button size="mini">查看</van-button>
            </view>
          </van-card>
        </navigator>
      </view>

    </scroll-view>


  </van-tab>
  <!-- 2.我要发布 -->
  <van-tab title="我要发布">
    <!--pages/send/send.wxml-->
    <van-toast id="van-toast" />
<form bindsubmit="formSubmit">
<!-- 物品名称 -->
  <view class='cell'>
      <van-field
      name="goodname"
      id = "goodname"
      value="{{ goodname }}"
      required
      clearable
      label="物品名称"
      icon="question-o"
      placeholder="请输入名称"
      bind:click-icon="onClickIcon"
    />
    </view>
<!-- 物品描述 -->
  <view class='cell'>
    <van-cell-group>
      <van-field 
      name="description"
      id = "description"
      value="{{ description }}" 
      label="物品描述" 
      type="textarea" 
      placeholder="请输入想要卖的物品的描述" 
      autosize border="{{ false }}" />
    </van-cell-group>
  </view>
<!-- 定价 -->
  <view class='cell'>
    <van-field
    name="goodprice"
    id = "goodprice"
    value="{{ goodprice }}"
    required
    clearable
    label="定价"
    type="number"
    icon="question-o"
    placeholder="请输入定价"
    bind:click-icon="onClickIcon"
  />
  </view>
<!-- 图片上传 -->
  <view class='cell '>
        <view class="weui-cells">
            <view class="weui-cell">
                <view class="weui-cell_bd">
                    <view class="weui-uploader">
                        <view class="weui-uploader_hd">
                            <view class="weui-uploader_title">图片上传</view>
                            <view class="weui-uploader_info">{{files.length}}/1</view>
                        </view>
                        <view class="weui-uploader_bd">
                            <view class="weui-uploader_files" id="uploaderFiles">
                                <block wx:for="{{files}}" wx:key="*this">
                                    <view class="weui-uploader_file" bindtap="previewImage" id="{{item}}">
                                        <image class="weui-uploader_img" src="{{item}}" mode="aspectFill" />
                                    </view>
                                </block>
                            </view>
                            <view class="weui-uploader_input-box">
                                <view class="weui-uploader_input" bindtap="chooseImage"></view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
  </view>
<!-- 姓名，电话号码，宿舍号 -->
  <view class='cell'>
  <van-cell-group>
  <van-field
    name="username"
    id = "username"
    value="{{ username }}"
    required
    clearable
    label="姓名"
    icon="question-o"
    placeholder="请输入姓名"
    bind:click-icon="onClickIcon"
  />

 <van-field
    name="phonenum"
    id = "phonenum"
    value="{{ phonenum }}"
    required
    clearable
    label="电话号码"
    icon="question-o"
    placeholder="请输入号码"
    bind:click-icon="onClickIcon"
  />

   <van-field
    name="classnum"
    id = "classnum"
    value="{{ classnum }}"
    required
    clearable
    label="宿舍号"
    icon="question-o"
    placeholder="请输入宿舍号"
    bind:click-icon="onClickIcon"
  />
</van-cell-group>
  </view>
<!-- 交易方式 -->
  <view class='cell'>
      <van-cell-group>
      <van-field
        value="线下交易"
        label="交易方式"
        left-icon="card"
        disabled
        border="{{ false }}"
      />
    </van-cell-group>
  </view>

  <button size="large" type="danger"  form-type="submit">发布</button>
</form>

  </van-tab>

</van-tabs>